# BC Dashboard Frontend Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Development server port
PORT=3001

# Host configuration (use 0.0.0.0 for server deployment, localhost for local dev)
HOST=localhost

# Disable browser auto-open (set to none for server deployment)
BROWSER=default

# API URL (backend server URL)
REACT_APP_API_URL=http://localhost:5000
